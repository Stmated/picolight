{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/ws2812.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "device": "Pico2040",
            //"runToEntryPoint": "main",
            "configFiles": [
                "interface/picoprobe.cfg",
                "target/rp2040.cfg"
            ],
            "showDevDebugOutput": "both",
            "searchDir": [
                "D:/Programs/pico-2021/openocd/tcl"
            ],
            "svdFile": "D:/Programs/pico-2021/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            // Work around for stopping at main on restart
            "postRestartCommands": [
                "break main",
                "continue"
            ],
        },

        // TODO: Make it so that if debugging locally, we run with the local cmake profile. How?
        {
            "name": "G++ Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/ws2812.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "showDisplayString": true,
            //"preLaunchTask": "cmake-build"
        }
    ]
}